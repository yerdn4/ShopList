<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Gui.Views.ShopListPage"
             Title="Lista de compras"
             xmlns:viewmodels="clr-namesapce:Shoplist.Gui.ViewModels"
             x:Class="ShopList.Gui.Views.">

    <Grid
        RowDefinitions="auto,*"
        Padding="8"
        RowSpacing="4">

        <Grid
            Grid.Row="0"
            RowDefinitions="auto,auto"
            ColumnDefinitions="auto,*,auto"
            RowSpacing="4"
            ColumnSpacing="4">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="Producto:"/>

            <Entry
                Grid.Column="1"
                Grid.Row="0"
                BackgroundColor="Beige"
                x:Name="ProductoEntry"/>

            <Button
                Grid.Column="2"
                Grid.Row="0"
                Text="+"
                x:Name="AgregarButton"/>
           

            <Entry
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="Beige"
                x:Name="CantidadEntry"
                FontSize="Medium"/>

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="X"
                x:Name="EliminarButton"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            EmptyView="AÃºn no se han agregado productos"
            BackgroundColor="Chocolate">

        </CollectionView>

    </Grid>
</ContentPage>
